<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatapp QR Code</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script src="https://cdn.socket.io/4.4.1/socket.io.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark mb-5">
      <div class="container">
        <a class="navbar-brand" href="#"> Whatsapp Gateway </a>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col">
          <h2>QR Code</h2>
          <img src="<%= qrCode %>" class="img-thumbnail" id="qrcode" />
        </div>
        <div class="col">
          <h2>Status</h2>
          <p>
            <span id="status" class="badge rounded-pill text-bg-secondary"
              ><%= status %></span
            >
          </p>
        </div>
      </div>
    </div>
    <script>
      ;(() => {
        var socket = io()

        socket.on('qr', (src) => {
          console.log('QR code refreshed')
          document.getElementById('qrcode').src = src
        })

        socket.on('status', (status) => {
          console.log('Status refreshed')
          document.getElementById('status').innerText = status
        })
      })()
    </script>
  </body>
</html>
