{
  "name": "whatsapp-gateway",
  "version": "2.1.0",
  "description": "Simple & Lightweight Whatsapp Gateway",
  "main": "dist/server.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --no-warn-ignored",
    "format": "prettier --ignore-path .gitignore --write \"src/**/*.+(ts|json)\"",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/views/**/** dist/",
    "build": "npm run clean && tsc && npm run copy-files",
    "dev": "ts-node src/server.ts",
    "serve": "node dist/server.js",
    "start": "node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vermaysha/whatsapp-gateway.git"
  },
  "keywords": [
    "whatsapp-gateway"
  ],
  "author": {
    "name": "Ashary Vermaysha",
    "email": "vermaysha@gmail.com",
    "url": "https://vermaysha.com"
  },
  "license": "LGPL-2.1",
  "bugs": {
    "url": "https://github.com/vermaysha/whatsapp-gateway/issues"
  },
  "homepage": "https://github.com/vermaysha/whatsapp-gateway#readme",
  "lint-staged": {
    "*.ts": "npm run lint",
    "*.{ts,json}": "npm run format"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/copyfiles": "^2.4.4",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.10",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "copyfiles": "2.4.1",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "5.0.5",
    "ts-node": "^10.9.2",
    "tslib": "2.6.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.2",
    "body-parser": "1.20.2",
    "ejs": "3.1.10",
    "express": "4.19.2",
    "pino": "9.0.0",
    "prettier": "3.2.5",
    "qrcode": "1.5.3",
    "socket.io": "4.7.5"
  }
}
