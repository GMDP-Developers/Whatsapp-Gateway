{
  "name": "whatsapp-gateway",
  "version": "1.0.0",
  "description": "Simple & Lightweight Whatsapp Gateway",
  "main": "dist/server.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .gitignore --ext .ts src/",
    "format": "prettier --ignore-path .gitignore --write \"src/**/*.+(ts|json)\"",
    "build": "tsc --build --force",
    "serve": "node dist/server.js",
    "dev": "tsnd --respawn src/server.ts"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vermaysha/whatsapp-gateway.git"
  },
  "keywords": [
    "whatsapp-gateway"
  ],
  "author": {
    "name": "Ashary Vermaysha",
    "email": "vermaysha@gmail.com",
    "url": "https://vermaysha.com"
  },
  "license": "LGPL-2.1",
  "bugs": {
    "url": "https://github.com/vermaysha/whatsapp-gateway/issues"
  },
  "homepage": "https://github.com/vermaysha/whatsapp-gateway#readme",
  "lint-staged": {
    "*.ts": "npm run lint",
    "*.{ts,json}": "npm run format"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/prettier": "^2.7.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "ts-node-dev": "2.0.0",
    "tslib": "2.4.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@adiwajshing/baileys": "4.4.0",
    "body-parser": "1.20.1",
    "express": "4.18.2",
    "prettier": "2.7.1"
  }
}
